<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="ROVER AD+" colour="#cb2026" icon="road">
    <block type="rover_move">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>
    <block type="rover_move_delay">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="time">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
    </block>
    <block type="rover_move_turn_angle">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
    </block>
    <block type="rover_move_motor">
      <value name="left_wheel_speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="right_wheel_speed">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
    </block>

    <block type="rover_stop"/>

    <block type="rover_servo_write_angle">
      <value name="angle">
        <shadow type="math_number">
          <field name="NUM">90</field>
        </shadow>
      </value>
    </block>

    <block type="rover_servo360_write">
      <value name="speed">
        <shadow type="math_number">
          <field name="NUM">0</field>
        </shadow>
      </value>
    </block>

    <block type="rover_line_sensor_read_all" />
    <block type="rover_line_sensor_read_single" />

    <block type="rover_ultrasonic_read" />
    <block type="rover_ultrasonic_detect">
      <value name="distance">
        <shadow type="math_number">
          <field name="NUM">10</field>
        </shadow>
      </value>
    </block>

    <block type="rover_show_led"/>

    <block type="rover_show_rgb_led_array">
      <value name="color1">
        <shadow type="colour_picker">
          <field name="COLOUR">#000000</field>
        </shadow>
      </value>
      <value name="color2">
        <shadow type="colour_picker">
          <field name="COLOUR">#000000</field>
        </shadow>
      </value>
      <value name="color3">
        <shadow type="colour_picker">
          <field name="COLOUR">#000000</field>
        </shadow>
      </value>
      <value name="color4">
        <shadow type="colour_picker">
          <field name="COLOUR">#000000</field>
        </shadow>
      </value>
      <value name="color5">
        <shadow type="colour_picker">
          <field name="COLOUR">#000000</field>
        </shadow>
      </value>
      <value name="color6">
        <shadow type="colour_picker">
          <field name="COLOUR">#000000</field>
        </shadow>
      </value>
    </block>
    <block type="rover_show_rgb_led">
      <value name="number_led">
        <shadow type="math_number">
          <field name="NUM">1</field>
        </shadow>
      </value>
      <value name="color">
        <shadow type="colour_picker">
          <field name="COLOUR">#ff0000</field>
        </shadow>
      </value>
    </block>
    <block type="rover_show_rgb_led_all">
      <value name="color">
        <shadow type="colour_picker">
          <field name="COLOUR">#ff0000</field>
        </shadow>
      </value>
    </block>

    <block type="rover_ir_on_receive"/>
    <block type="rover_ir_remote_btn"/>
    <block type="rover_ir_recv" />
    <block type="rover_ir_clear" />

    <block type="rover_mpu_get_accel" />
    <block type="rover_mpu_get_gyro" />
    <block type="rover_mpu_is_shake" />
  </category>
</xml>
